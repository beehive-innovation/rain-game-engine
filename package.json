{
  "name": "rain-game-engine",
  "version": "0.0.1",
  "description": "Game engine for decentralise games.",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "docgen": "solidity-docgen -o ./docs/api/ --solc-module solc-0.8 --exclude ./contracts/test/ -t ./.templates/",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "codegen": "graph codegen",
    "build-graph": "graph build",
    "hardhat-node": "hardhat node",
    "copy-abis": "cp artifacts/contracts/GameAssets.sol/GameAssets.json abis/ && cp artifacts/contracts/GameAssetsFactory.sol/GameAssetsFactory.json abis/",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ vishalkale151071/blocks",
    "create-local": "graph create --node http://localhost:8020/ vishalkale151071/blocks",
    "remove-local": "graph remove --node http://localhost:8020/ vishalkale151071/blocks",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 vishalkale151071/blocks --version-label 1",
    "graph-node": "docker-compose -f \"docker/docker-compose.yml\" up",
    "prepare:mumbai": "npm run build && npx mustache config/mumbai.json subgraph.template.yaml subgraph.yaml && npm run copy-abis && npm run codegen",
    "deploy:mumbai": "npm run prepare:mumbai && npm run codegen && npm run deploy",
    "prepare:localhost": "npm run build && npx mustache config/localhost.json subgraph.template.yaml subgraph.yaml && npm run copy-abis && npm run codegen",
    "deploy:localhost": "npm run prepare:localhost && npm run create-local && npm run deploy-local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beehive-innovation/rain-game-engine.git"
  },
  "author": "beehive-innovation",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beehive-innovation/rain-game-engine/issues"
  },
  "homepage": "https://github.com/beehive-innovation/rain-game-engine#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.6",
    "eslint": "^8.2.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.9.2",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-storage-layout": "^0.1.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "solc-0.8": "npm:solc@^0.8.10",
    "solhint": "^3.3.4",
    "solidity-docgen": "^0.5.13",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "tslib": "^2.0.0",
    "typechain": "^6.0.2"
  },
  "dependencies": {
    "@beehiveinnovation/rain-protocol": "git+https://github.com/beehive-innovation/rain-protocol.git#2dd7102e9addf0662bc0aef2a6aacb8b82edf089",
    "@graphprotocol/graph-cli": "^0.26.0",
    "@graphprotocol/graph-ts": "^0.26.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "mustache": "^4.2.0"
  }
}